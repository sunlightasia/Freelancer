<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persistence.mybatis.mappers.RoomPriceListMapper">
    <cache/>
	
    <insert id="insertRoomPriceList" parameterType="model.listini.RoomPriceList" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roomPriceList(id_roomType,id_season,id_convention,id_structure) values (#{id_roomType},#{id_season},#{id_convention},#{id_structure})
    </insert>
    
    <select id="findRoomPriceListByIdStructureAndIdSeasonAndIdRoomTypeAndIdConvention" parameterType="map" resultType="model.listini.RoomPriceList">
        <include refid="selectRoomPriceList"/>WHERE id_structure = #{id_structure} AND id_season = #{id_season} AND id_roomType = #{id_roomType} AND id_convention = #{id_convention}
    </select>
    
    <select id="findRoomPriceListsByIdSeason" parameterType="int" resultType="model.listini.RoomPriceList">
        <include refid="selectRoomPriceList"/>WHERE id_season = #{id_season}
    </select>
    
    <select id="findRoomPriceListsByIdRoomType" parameterType="int" resultType="model.listini.RoomPriceList">
        <include refid="selectRoomPriceList"/>WHERE id_roomType = #{id_roomType}
    </select>
    
    <select id="findRoomPriceListsByIdConvention" parameterType="int" resultType="model.listini.RoomPriceList">
        <include refid="selectRoomPriceList"/>WHERE id_convention = #{id_convention}
    </select>
    
    <select id="findRoomPriceListById" parameterType="int" resultType="model.listini.RoomPriceList">
        <include refid="selectRoomPriceList"/>WHERE id = #{id}
    </select>
    
    <delete id="deleteRoomPriceListById" parameterType="int">
        DELETE FROM roomPriceList WHERE id = #{id}
    </delete>
    
    <sql id="selectRoomPriceList">
        SELECT id,id_roomType,id_season,id_convention,id_structure FROM roomPriceList
    </sql>
    
</mapper>